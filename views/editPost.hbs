        <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5 pt-5"> 
        <script src='https://cdn.tiny.cloud/1/2edbn6scbh2pwwfq1x8vxlafwfstk5zci4d7zsmpa09kp574/tinymce/5/tinymce.min.js' referrerpolicy="origin">
        </script>
        <script>
          tinymce.init({
            selector: '#mytextarea'
          });
        </script>
        <div class="title-block">
            <h3 class="title">
                Edit Post <span class="sparkline bar" data-type="bar"></span>
            </h3> </div>
        <form name="item" method="post" action="/post/doedit{{post._id}} "enctype="multipart/form-data">
            <div class="card card-block">
                <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                    Title:
                </label>
                <div class="col-sm-10"> <input type="text" name="title" class="form-control boxed" value="{{post.Title}}" placeholder="" required> </div>
            </div>
                <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                        Content:
                    </label>
                    <div class="col-sm-10">   <textarea name="content" id="mytextarea" class="form-control boxed"  cols="20" rows="10" >{{post.Content}}</textarea> </div>
        
        
               
        
            <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                        ImageURL:
                    </label>
                    
                    <div class="col-sm-10"> 
                        
                        <input type="file" name="image" class="form-control boxed" placeholder=""> </div>
                </div>
                <!-- <input type="file" hidden name="posturl" value="<%=post.posturl%>"> -->
        
                <div class="form-group row">
                    <div class="col-sm-10 col-sm-offset-2"> <button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-primary">
                            Submit
                        </button> </div>
                </div>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    Do you want to continue the changes?
                  </div>
                  <div class="modal-footer">
                    <a href="/post/allposts" class="btn btn-secondary" data-dismiss="modal">Close</a>
                    <button id="btnSubmit" type="submit" class="btn btn-primary">Save changes</button>
                  </div>
                </div>
              </div>
            </div>
             </form>
        </td>
          

          
