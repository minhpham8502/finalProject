    <div id="content" class="p-4 p-md-5 pt-5"> 
      <form method="POST" action="/class/doCreate">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Class name</label>
          <input type="text" class="form-control" id="" aria-describedby="" name="classname" value="{{data.classname}}">
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Class ID</label>
          <input type="text" class="form-control" id="" name="classID" value="{{data.classID}}">
        </div>
          <label for="exampleInputPassword1" class="form-label">Category</label>

        <div class="input-group mb-3">

          <select class="custom-select" id="inputGroupSelect01" name="category">
         
            <option value="hocsinhcualop23">2-3 years old</option>
            <option value="hocsinhcualop34">3-4 years old</option>
            <option value="hocsinhcualop45">4-5 years old</option>
            <option value="hocsinhcualop56">5-6 years old</option>

          </select>
        </div>
        <div class="mb-3">
          <label  class="form-label">Teacher</label>
       

            <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="teacherID">
              {{#each account}}
          
              <option  name="teacherID">{{accountID}}</option>
          
              {{/each}}

            </select>
          </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
